{
    "/auth/register": {
        "post": {
            "summary": "Cria usuário na aplicação",
            "tags": ["Auth"],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/UserRegister"
                        }
                    }
                }
            },
            "responses": {
                "400": {
                    "description": "Erro na validação dos campos"
                },
                "403": {
                    "description": "Username indisponível"
                },
                "200": {
                    "description": "Usuário criado com sucesso"
                },
                "500": {
                    "description": "Erro interno ao criar usuário"
                }
            }
        }
    },
    "/auth/login": {
        "post": {
            "summary": "Gerar par de Access token e Refresh token",
            "tags": ["Auth"],
            "requestBody": {
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/UserLogin"
                        }
                    }
                }
            },
            "responses": {
                "200": {
                    "description": "Token Gerado com sucesso"
                },
                "400": {
                    "description": "Erro na validação dos campos"
                },
                "401": {
                    "description": "Não autorizado"
                },
                "404":{
                    "description": "Usuário não encontrado"
                },
                "500": {
                    "description": "Erro interno ao gerar token"
                }
            }
        }
    },
    "/auth/refresh": {
        "post": {
            "summary": "Gerar novos pares de Access token e RefreshToken",
            "tags": ["Auth"],
            "security": [
                {
                    "cookieAuth": []
                }
            ],
            "responses": {
                "200": {
                    "description": "Tokens Gerados com sucesso"
                },
                "401": {
                    "description": "Não autorizado"
                },
                "500": {
                    "description": "Erro interno ao gerar token"
                }
            }
        }
    }
}