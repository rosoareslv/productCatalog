{
  "/product": {
    "post": {
      "summary": "Cria produto na aplicação",
      "tags": ["Product"],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ProductRegister"
            }
          }
        }
      },
      "responses": {
        "400": {
          "description": "Erro na validação dos campos"
        },
        "200": {
          "description": "Produto criado com sucesso"
        },
        "500": {
          "description": "Erro interno ao criar produto"
        }
      }
    },
    "get": {
      "summary": "Lista todos os produtos cadastrados para o usuário",
      "tags": ["Product"],
      "responses": {
        "200": {
          "description": "Produtos retornadas com sucesso"
        },
        "500": {
          "description": "Erro interno ao buscar produtos"
        }
      }
    }
  },
  "/product/{id}": {
    "get": {
      "summary": "Busca produto na aplicação",
      "tags": ["Product"],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "Id do produto"
        }
      ],
      "responses": {
        "200": {
          "description": "Produto retornado com sucesso"
        },
        "404": {
          "description": "Produto não identificada"
        },
        "500": {
          "description": "Erro interno ao buscar produto"
        }
      }
    },
    "delete": {
      "summary": "Deleta produto na aplicação",
      "tags": ["Product"],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "Id do produto"
        }
      ],
      "responses": {
        "200": {
          "description": "Produto deletado com sucesso"
        },
        "404": {
          "description": "Produto não identificado"
        },
        "500": {
          "description": "Erro interno ao deletar produto"
        }
      }
    },
    "patch": {
      "summary": "Atualiza informações do Produto",
      "tags": ["Product"],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "Id do produto"
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ProductUpdate"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Produto atualizado com sucesso"
        },
        "400": {
          "description": "Erro na validação dos campos"
        },
        "404": {
          "description": "Produto não identificada"
        },
        "500": {
          "description": "Erro interno ao atualizar produto"
        }
      }
    }
  }
}
